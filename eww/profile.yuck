(deflisten profileimage :initial "" `echo "/home/$USER/.face"`)
(defwidget profile []
  (box :class "profile-box" :orientation "v" :space-evenly false :hexpand false :width 100
    (box :halign "center" :class "profile-image" :width 100 :height 100 :style "background-image: url('file://${profileimage}');" :hexpand false :space-evenly false)
    (label :class "username" :text user)
  )
)