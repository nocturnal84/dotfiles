(defwidget power []
  (box :orientation "h" :space-evenly true
    (button :class "lock" :width 75 :height 75 :onclick `dm-tool lock` "")
    (button :class "logout" :width 75 :height 75 :onclick `i3-msg exit` "")
    (button :class "reboot" :width 75 :height 75 :onclick `systemctl reboot` "ﰇ")
    (button :class "shutdown" :width 75 :height 75 :onclick `systemctl shutdown` "⏻")
  )
)